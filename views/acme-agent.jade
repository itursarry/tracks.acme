extends layout

block content
  h2.h2 Acme Agents
  div
    h3.h3 Add agent
    form(action='/acmeagents/',method='post').border.rounded
      div.form-group.row
        label.col-sm-2.col-form-label Name
        div.col-sm-10
          input(type='text', name='name', required, placeholder="ex. Marty").form-control#name
      div.form-group.row
        label.col-sm-2.col-form-label Surname
        div.col-sm-10
          input(type='text', name='surname', required, placeholder="ex. McFlay").form-control#Surname
      div.form-group.row
        label.col-sm-2.col-form-label Phone
        div.col-sm-10
          input(type='text', name='phone', required, placeholder="ex. 0221-15654584").form-control#phone
      div.form-group.row
        label.col-sm-2.col-form-label E-Mail
        div.col-sm-10
          input(type='text', name='email', required, placeholder="marty.cmflay@gmail.com").form-control#email
      button(type='submit').btn.btn-primary Submit
  br
  div
    h3.h3 Agents List
    table.table
      thead
        th Name
        th Surname
        th Phone
        th E-MAil
        th Actions
      tbody
        each acmeAgent in acmeAgents
          tr
            td=acmeAgent.name
            td=acmeAgent.surname
            td=acmeAgent.phone
            td=acmeAgent.email
            td
              i.fa.fa-search-plus
              i.fa.fa-edit
              i.fa.fa-trash
