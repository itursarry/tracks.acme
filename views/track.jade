extends layout

block content
  h2.h2 Tracks
  h3.h3 Add
  div
    form(action='/tracks/',method='post').border.rounded
      div.form-group.row
        label.col-sm-2.col-form-label Movie name
        div.col-sm-10
          input(type='text', name='movie', required, placeholder="ex. Back to the future").form-control#movie
      button(type='submit').btn.btn-primary Submit
  br
  h3.h3 List
  div
    table.table
      thead
        th Movie
        th Actions
      tbody
        each track in tracks
          tr
            td=track.movie
            td
              a(href='/tracks/'+track._id)
                i.fa.fa-search-plus
              i.fa.fa-edit
              i.fa.fa-trash